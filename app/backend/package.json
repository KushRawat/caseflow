{
  "name": "caseflow-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS=\"--require ./scripts/setup-webcrypto.cjs\" vitest run",
    "test:watch": "NODE_OPTIONS=\"--require ./scripts/setup-webcrypto.cjs\" vitest",
    "seed:admin": "tsx src/scripts/seed-admin.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@sentry/node": "^8.14.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "libphonenumber-js": "^1.11.5",
    "morgan": "^1.10.0",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^6.1.1",
    "prisma": "^5.20.0",
    "supertest": "^7.0.0",
    "tsup": "^8.2.4",
    "tslib": "^2.6.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0",
    "tsx": "^4.19.0"
  }
}
